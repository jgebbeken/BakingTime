<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_spacing">

    <TextView
        android:id="@+id/tvIngredients"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_top_large"
        android:layout_marginTop="@dimen/margin_top_large"
        android:paddingBottom="@dimen/layout_margin_small"
        android:paddingTop="@dimen/layout_margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="unsalted butter, melted" />

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="@dimen/layout_margin_small"
        android:paddingStart="@dimen/layout_margin_small"
        app:layout_constraintBottom_toBottomOf="@+id/tvIngredients"
        app:layout_constraintStart_toEndOf="@+id/tvIngredients"
        app:layout_constraintTop_toTopOf="@+id/tvIngredients"
        tools:text="6" />

    <TextView
        android:id="@+id/tvMeasure"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvQuantity"
        app:layout_constraintStart_toEndOf="@+id/tvQuantity"
        app:layout_constraintTop_toTopOf="@+id/tvQuantity"
        tools:text="UNIT" />

</android.support.constraint.ConstraintLayout>